<!DOCTYPE html>
<html>
  <head>
    <title>Khushibaby</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
<%=image_tag("khushi.png", size: "50x50", alt: "Edit Entry")%>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
    <%if user_signed_in?%>
       <% if current_user.is?(:admin) %>
      <li class="nav-item active">
        <a class="nav-link" href="/logs">Logs <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <%= link_to('Summary', summary_path, method: :get, class:'nav-link') %> 
      </li>
      <%else%>
      <li class="nav-item">
        <%= link_to('Settings', home_settings_path, method: :get, class:'nav-link') %> 
      </li>
      <%end%>
      <%end%>
    </ul>
    <span class="navbar-text">
      <% if user_signed_in? %>
        <%= current_user.email %>  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
      <% else %>
        <%= link_to "Sign in", new_user_session_path %><br />
      <% end %>
    </span>
  </div>
</nav>
<main>
    <%= yield %>
    </main>
